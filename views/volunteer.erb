<% if @volunteer %>
  <h2>Volunteer name: <%= @volunteer.name %></h2>
  <h3>Project: <%= @project.title %></h3>

  <form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="name">Change volunteer:</label>
    <input id="name" name="name" type="text" value="<%= @volunteer.name %>">

    <button type="submit">Update Volunteer</button>
  </form>

  <form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button type="submit">Delete volunteer</button>
  </form>

  <p><a href="/projects/<%= @volunteer.project_id %>">Back to '<%= @project.title %>' project</a></p>
  <p><a href="/projects">Back to project list</a></p>
<% else %>
  <h2>The volunteer you seek doesn't exist.</h2>
<% end %>